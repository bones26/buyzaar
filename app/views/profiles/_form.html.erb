    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :street_number %>
    <%= f.number_field :street_number %>
  </div>

  <div class="field">
    <%= f.label :street_name %>
    <%= f.text_field :street_name %>
  </div>

  <div class="field">
    <%= f.label :suburb %>
    <%= f.text_field :suburb %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.select(:state,['ACT', 'NSW', 'NT', 'QLD', 'SA', 'VIC', 'WA'])%>
  </div>

  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>

  <div class="field">
    <%= f.label :postcode %>
    <%= f.number_field :postcode %>
  </div>

  <div class="field">
    <%= f.label :picture %>
    <%= f.text_field :picture %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
